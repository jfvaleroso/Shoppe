@model Exchange.Core.Entities.Store
@{
    ViewBag.Title = "Store Maintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Store</strong></h3>
            </div>
            <div class="panel-body small">
                Instructions here...
            </div>
        </div>
    </div>
    <div class="col-md-7">

        @Html.Partial("ModalTemplates/_Status")

        <div id="transaction">
            @using (Html.BeginForm())
            {
                @Html.Partial("ModalTemplates/_Alert")

                <div class="form-group">
                    <div class="editor-label text-right">
                        <p class="small ">
                            @string.Format("{0}{1}", "Last modified by:", Html.DisplayFor(model => model.ModifiedBy).ToString() != "" ? Html.DisplayFor(model => model.ModifiedBy).ToString() : Html.DisplayFor(model => model.CreatedBy).ToString())
                            @string.Format("{0}{1}", "Last date modified:", Html.DisplayFor(model => model.DateModified).ToString() != "" ? Html.DisplayFor(model => model.DateModified).ToString() : Html.DisplayFor(model => model.DateCreated).ToString())
                        </p>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="editor-label">
                                <label>Store Code</label>
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Code, new {@class = "form-control"})
                                <p id="status" class="small">Verify if Code exists.</p>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="editor-field">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Name)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
                                    <p class="small">Please indicate the store name.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Address)
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Address, new {@class = "form-control"})
                        <p class="small">Please indicate the store address.</p>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.TelephoneNo)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.TelephoneNo, new {@class = "form-control"})
                        <p class="small">Please indicate the telephone no.</p>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.PermitNo)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.PermitNo, new {@class = "form-control"})
                        <p class="small">Please indicate the permit no.</p>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.TINNo)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.TINNo, new {@class = "form-control"})
                        <p class="small">Please indicate the TIN No.</p>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Active)
                    </div>
                    <div class="editor-field small">
                        @Html.CheckBoxFor(model => model.Active)
                        Activate or deactivate store
                    </div>
                    @Html.HiddenFor(model => model.Id)
                </div>

                <div class="right">
                    <button id="btnSaveChanges" class="btn btn-large btn-success" type="button">
                        Save Changes
                    </button>
                    <button id="btnCancel" class="btn btn-large btn-success" type="button">
                        Cancel
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@Html.Hidden("Item", Url.Action("Item"))
@Html.Hidden("Manage", Url.Action("Manage"))
@Html.Hidden("CheckAvailability", Url.Action("CheckAvailability"))