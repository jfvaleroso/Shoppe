@model Exchange.Web.Models.SettingModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<legend>Modify Main Settings</legend>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                Save Changes</h3>
        </div>
        <div class="panel-body">
            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.CompanyName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.CompanyName)
                    @Html.ValidationMessageFor(model => model.CompanyName)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Owner)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Owner)
                    @Html.ValidationMessageFor(model => model.Owner)
                </div>
            </fieldset>
        </div>
    </div>
    <p>
        <button id="btnModify" class="btn btn-large btn-success" type="submit">
            Save changes</button>
        <button id="btnCancel" class="btn btn-large btn-success" type="button">
            Cancel</button>
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}