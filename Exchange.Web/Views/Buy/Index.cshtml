@model Exchange.Web.Models.BuyModel
@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main-invoice">
    <div class="panel panel-success">
        <div class="panel-heading"><strong>Create new invoice</strong></div>
        <div class="panel-body">

            <table id="invoice" class="table table-responsive table-hover table-condensed small">
                <thead>
                    <tr>
                        <td></td>
                        <td>Product</td>
                        <td>Quantity</td>
                        <td>Rate</td>
                        <td>Amount</td>
                        <td>Bonus</td>
                        <td>SubTotal</td>
                    </tr>
                </thead>
                <tr class="invoice-item">
                    <td><span class="glyphicon glyphicon-align-justify"></span></td>
                    <td class="product" style="width:180px;padding-right:5px" >
                        @Html.DropDownListFor(model => model.ProductId, Model.ProductList, string.Empty, new { @class = "combobox combobox-medium" })
                    </td>
                    <td class="quantity"><input class="number" data-toggle="tooltip" title="modify quantity" type="text" /></td>
                    <td class="rate"><input class="number" data-toggle="tooltip" title="modify rate" type="text" readonly="readonly" /></td>
                    <td class="amount"><input class="number" type="text" readonly="readonly" /></td>
                    <td class="vat"><input class="number" type="text" readonly="readonly" /></td>
                    <td class="subtotal"><input class="number" type="text" readonly="readonly" /></td>
                    <td class="delete"><a class="glyphicon glyphicon-remove"></a></td>
                </tr>
            </table>
            <table id="invoice-summary" class="right small">

                <tr>
                    <td>
                        <span>Sub Total:</span>
                        <div id="total_amount"><input type="text" readonly="readonly" /></div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span>Total Bonus:</span>
                        <div id="total_vat"><input type="text" readonly="readonly" /></div>
                    </td>
                </tr>
                <tr>
                    <td>

                        <div id="grand_total"><h3><input type="text" readonly="readonly" /></h3><span>Grand Total:</span></div>
                    </td>
                </tr>


            </table>
           <button class="btn btn-success" id="btnAdd"><span class="glyphicon glyphicon-plus"></span> New line</button>

        </div>

    </div>
    <div class="right">
        <button id="btnDraft" class="btn btn-large btn-success" type="button">
            Save to draft
        </button>
        <button id="btnApprove" class="btn btn-large btn-success" type="button">
            Save and Approve
        </button>
        <button id="btnCancel" class="btn btn-large btn-success" type="button">
            Cancel
        </button>
        </div>
</div>




