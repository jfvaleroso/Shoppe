<!DOCTYPE html>
<html lang="en">
<head>
    <title>Gold Exchange</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    @Styles.Render("~/Content/main/css")
    @Styles.Render("~/Content/bootstrap/css")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/kendo/2012.2.913")
    @Styles.Render("~/scripts/jtable/themes/metro/jeff/style")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jtable")
    @Scripts.Render("~/bundles/jquery.validate")
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
    
    
    <!-- Static navbar -->
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar">
                    </span>
                </button>
                <a class="navbar-brand" href="#">Gold Exchange</a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.MvcSiteMap().Menu("BootstrapMenuHelperModel")
                @*<ul class="nav navbar-nav navbar-right">
                    <li><a href="../navbar/">Welcome, Jeff</a></li>
                </ul>*@
            </div>
        </div>
        <div class="sub-navbar">
            <div class="container">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
     <!-- /Static navbar -->

    <!-- container -->
    <div class="container">
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>
    <!-- /container -->


    <!-- script-->
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/global")
    @Scripts.Render("~/bundles/global/main")
    <!-- /script-->
    @Html.Partial("_Loading")
</body>
</html>
